@model MySchool.Models.Enfants
@{
    ViewData["Title"] = "Inscription";
}

<h1 class="text-center">Inscivez votre eleve</h1>
<hr />

<div class="container col-6">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="FirstName" class="custom-control-label font-weight-bold"></label>
            <input type="text" asp-for="FirstName" class="form-control" placeholder="Prenom" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="custom-control-label font-weight-bold"></label>
            <input type="text" asp-for="LastName" class="form-control" placeholder="Nom Complet" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="custom-control-label font-weight-bold"></label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Adresse Email de l'eleve" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Grade" class="custom-control-label font-weight-bold"></label>
            <select asp-for="Grade" asp-items="@Html.GetEnumSelectList<Grade>()">
                <option value="">---Choisissez le Niveau---</option>
            </select>
            <span asp-validation-for="Grade"></span>
        </div>
        <div class="form-group">
            <label asp-for="Option" class="custom-control-label font-weight-bold"></label>
            <select asp-for="OptionID" class="form-control" asp-items="ViewBag.CategoryNameSL">
                <option value="">---Choisissez L'option---</option>
            </select>
            <span asp-validation-for="Option"></span>
        </div>
        <div class="form-group">
            <label asp-for="Parent" class="custom-control-label font-weight-bold"></label>
            <select asp-for="ParentID" class="form-control" asp-items="ViewBag.ParentsSL">
                <option value="">---Choisissez Le tuteur---</option>
            </select>
            <span asp-validation-for="Option"></span>
        </div>
        <div class="form-group justify-content-xl-center">
            <input type="submit" value="Valider l'inscription" class="btn btn-primary" />
            <a asp-controller="Home" asp-action="Index" class="nav-link text-danger">Annuler</a>
        </div>
    </form>
</div>


@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}